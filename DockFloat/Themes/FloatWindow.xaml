<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DockFloat">

    <Style x:Key="ToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.InfoTextBrushKey}}" />
        <Setter Property="BorderBrush" Value="#000000" />
        <Setter Property="Padding" Value="1" />
    </Style>

    <Style x:Key="DockInButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="LayoutRoot" Width="44" Height="30"
                          Background="Transparent">
                        <Path HorizontalAlignment="Center" VerticalAlignment="Center" Fill="#88FFFFFF"
                              Data="F1M0.9999,-0.000199999999999534L0.9999,3.0008 4.6229,3.0008 1.0989,6.8088 1.0989,14.8988 9.3149,14.8988 13.0419,11.7398 13.0419,15.9998 15.9999,15.9998 15.9999,-0.000199999999999534z M4.9489,3.0008L10.5979,3.0008 4.9489,8.5178z M13.0419,5.3718L13.0419,11.1998 7.3339,11.1998z" />
                        <Path x:Name="arrow" HorizontalAlignment="Center" VerticalAlignment="Center"
                              Fill="#999999"
                              Data="F1M2,1L2,2 14,2 14,15 15,15 15,1z M8.949,13.898L2.099,13.898 2.099,7.201 3.949,5.201 3.949,10.898 11,4 12,5 4.949,12.199 10.953,12.199z" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="LayoutRoot" Property="Background" Value="#E5E5E5" />
                            <Setter TargetName="arrow" Property="Fill" Value="#000000" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <ControlTemplate.Resources>
                        <Style TargetType="ToolTip" BasedOn="{StaticResource ToolTipStyle}" />
                    </ControlTemplate.Resources>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Dock this pop-up back into the main window" />
    </Style>

    <Style x:Key="CaptionButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="LayoutRoot" Width="44" Height="30"
                          Background="Transparent">
                        <TextBlock x:Name="txt" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Text="{TemplateBinding Content}"
                                   FontFamily="Marlett" FontSize="14" Foreground="#999999"
                                   RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"
                                   TextOptions.TextFormattingMode="Display" />
                        <!-- Windows 10 only! <TextBlock x:Name="txt" Text="{TemplateBinding Content}" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#999999" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"
                                   TextOptions.TextFormattingMode="Display"/>-->
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="LayoutRoot" Property="Background" Value="#E5E5E5" />
                            <Setter TargetName="txt" Property="Foreground" Value="#000000" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <ControlTemplate.Resources>
                        <Style TargetType="ToolTip" BasedOn="{StaticResource ToolTipStyle}" />
                    </ControlTemplate.Resources>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CloseButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="LayoutRoot" Width="44" Height="30"
                          Background="Transparent">
                        <TextBlock x:Name="txt" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Text="&#x2573;" FontFamily="Segoe UI Symbol" FontSize="12"
                                   Foreground="#999999" RenderOptions.ClearTypeHint="Auto"
                                   TextOptions.TextRenderingMode="Aliased" TextOptions.TextFormattingMode="Display" />
                        <!-- Windows 10 only! <TextBlock x:Name="txt" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#999999" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"
                                   TextOptions.TextFormattingMode="Display"/>-->
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="LayoutRoot" Property="Background" Value="#e81123" />
                            <Setter TargetName="txt" Property="Foreground" Value="#ffffff" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                    <ControlTemplate.Resources>
                        <Style TargetType="ToolTip" BasedOn="{StaticResource ToolTipStyle}" />
                    </ControlTemplate.Resources>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Close" />
    </Style>

    <Style x:Key="MinimizeButtonStyle" TargetType="Button"
           BasedOn="{StaticResource CaptionButtonStyle}">
        <Setter Property="Content" Value="&#x30;" />
        <!--<Setter Property="Content" Value="&#xE949;"/> win10 -->
        <Setter Property="ToolTip" Value="Minimize" />
    </Style>

    <Style x:Key="MaximizeButtonStyle" TargetType="Button"
           BasedOn="{StaticResource CaptionButtonStyle}">
        <Setter Property="Content" Value="&#x31;" />
        <!--<Setter Property="Content" Value="&#xE739;"/> win10 -->
        <Setter Property="ToolTip" Value="Maximize" />
    </Style>

    <Style x:Key="RestoreButtonStyle" TargetType="Button"
           BasedOn="{StaticResource CaptionButtonStyle}">
        <Setter Property="Content" Value="&#x32;" />
        <!--<Setter Property="Content" Value="&#xE923;"/> win10 -->
        <Setter Property="ToolTip" Value="Restore Down" />
    </Style>

    <Style xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" TargetType="local:FloatWindow">
        <Setter Property="shell:WindowChrome.WindowChrome">
            <Setter.Value>
                <shell:WindowChrome CaptionHeight="30" CornerRadius="20" GlassFrameThickness="5,30,5,5"
                                    NonClientFrameEdges="None" ResizeBorderThickness="5" />
            </Setter.Value>
        </Setter>
        <Setter Property="ShowInTaskbar" Value="True" />
        <Setter Property="MinWidth" Value="220" />
        <Setter Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FloatWindow">
                    <!--  This border lets the active-window highlighting (colored border around window) show through from the OS WindowChrome  -->
                    <Border x:Name="root" Padding="1" UseLayoutRounding="True">
                        <DockPanel x:Name="innerRoot" Background="{TemplateBinding Background}">
                            <DockPanel x:Name="titleBar"
                                       Height="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(shell:WindowChrome.WindowChrome).CaptionHeight, Mode=OneWay}"
                                       Background="white" DockPanel.Dock="Top">

                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">

                                    <Button x:Name="PART_DockButton" 
                                            Style="{StaticResource DockInButtonStyle}" 
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True" />

                                    <Button x:Name="PART_MinimizeButton"
                                            Style="{StaticResource MinimizeButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True" />

                                    <Button x:Name="PART_RestoreButton"
                                            Style="{StaticResource MaximizeButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True" />

                                    <Button x:Name="PART_CloseButton"
                                            Style="{StaticResource CloseButtonStyle}"
                                            WindowChrome.IsHitTestVisibleInChrome="True" />

                                </StackPanel>
                                <TextBlock Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}" />
                            </DockPanel>
                            <Border BorderThickness="{TemplateBinding Border.BorderThickness}" BorderBrush="{TemplateBinding Border.BorderBrush}">
                                <AdornerDecorator>
                                    <ContentPresenter />
                                </AdornerDecorator>
                            </Border>
                        </DockPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--  Fix issue where WPF cuts off content edges when window is maximized  -->
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="root" Property="Padding" Value="{Binding Source={x:Static SystemParameters.WindowResizeBorderThickness}}" />
                            <Setter TargetName="innerRoot" Property="Margin" Value="{Binding Source={x:Static SystemParameters.WindowResizeBorderThickness}}" />
                            <Setter TargetName="PART_RestoreButton" Property="Style" Value="{StaticResource RestoreButtonStyle}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
