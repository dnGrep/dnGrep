<Window x:Class="dnGREP.WPF.BookmarkDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dnGREP.WPF"
        mc:Ignorable="d"
        Title="Bookmark Details" SizeToContent="WidthAndHeight"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        ResizeMode="CanResize" ShowInTaskbar="True" Icon="/dnGREP;component/nGREP.ico">


    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="3,0,0,6"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="8" MinWidth="450">
        <StackPanel DockPanel.Dock="Top">
            
            <TextBlock Text="Search for:"/>
            <TextBox Text="{Binding SearchFor}" />
            
            <TextBlock Text="Replace with:"/>
            <TextBox Text="{Binding ReplaceWith}" />

            <TextBlock Text="File pattern:"/>
            <TextBox Text="{Binding FilePattern}"/>

            <TextBlock Text="Description:"/>
            <TextBox Text="{Binding Description}" Height="40" TextWrapping="Wrap" AcceptsReturn="True" />
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" IsCancel="True"/>
            <Button Content="OK" IsDefault="True" Click="OkButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
