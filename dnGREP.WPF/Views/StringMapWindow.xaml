<my:ThemedWindow x:Class="dnGREP.WPF.StringMapWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:l="clr-namespace:dnGREP.Localization;assembly=dnGREP.Localization"
                 xmlns:my="clr-namespace:dnGREP.WPF"
                 mc:Ignorable="d"
                 Title="String Replacements"
                 MinWidth="500"
                 MinHeight="300"
                 Width="600"
                 d:DesignHeight="400"
                 FlowDirection="{Binding CultureFlowDirection}"
                 FontFamily="{Binding ApplicationFontFamily}"
                 FontSize="{Binding DialogFontSize}"
                 my:DiginesisHelpProvider.HelpKeyword="Keyboard"
                 my:DiginesisHelpProvider.HelpNavigator="Topic"
                 my:DiginesisHelpProvider.ShowHelp="True"
                 ResizeMode="CanResize"
                 my:ChromeButtonExtension.ButtonVisibility="MinimizeHidden"
                 Background="{DynamicResource Dialog.Background}"
                 CaptionBackground="{DynamicResource Caption.Dialog.Background}"
                 Icon="/dnGREP;component/nGREP.ico"
                 WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource LabelTextBlockStyle}">
            <Setter Property="Margin" Value="3" />
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource ThemedLabel}">
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="TextElement.Foreground" Value="{DynamicResource Button.Disabled.Foreground}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource FormButtonStyle}">
            <Setter Property="Padding" Value="6,1" />
            <Setter Property="Margin" Value="3" />
        </Style>

    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="8">

        <Grid DockPanel.Dock="Bottom"
              Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="24"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0"
                   Margin="3,12,3,3"
                   Content="Add mapping"
                   FontWeight="SemiBold"/>

            <Label Grid.Row="1" Grid.Column="0"
                   Content="Original character(s)"/>

            <Label Grid.Row="1" Grid.Column="1"
                   Content="Unicode code point(s)"/>

            <TextBox Grid.Row="2" Grid.Column="0"
                     Margin="3,3,12,3"
                     HorizontalAlignment="Stretch"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     ToolTip="{Binding MapKeyName}">
                <TextBox.Resources>
                    <my:BindingProxy x:Key="proxy" Data="{Binding}"/>
                </TextBox.Resources>
                <TextBox.Text>
                    <Binding Path="MapKey" Mode="TwoWay" 
                             UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <my:UniqueStringValidationRule
                                ValidatesOnTargetUpdated="True"
                                ErrorMessage="Original value already exists.">
                                <my:UniqueStringValidationRule.KeyList>
                                    <my:KeyList Items="{Binding Data.MapKeys, Source={StaticResource proxy}}"/>
                                </my:UniqueStringValidationRule.KeyList>
                            </my:UniqueStringValidationRule>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBox Grid.Row="2" Grid.Column="1"
                     Margin="3,3,12,3"
                     HorizontalAlignment="Stretch"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Text="{Binding MapKeyCodePoint, UpdateSourceTrigger=PropertyChanged}" />

            <Button Grid.Row="2" Grid.Column="2" 
                    Content="Add"
                    Command="{Binding AddMapCommand}"/>

            <Label Grid.Row="3" Grid.Column="0"
                   Content="Substitute character(s)"/>

            <Label Grid.Row="3" Grid.Column="1"
                   Content="Unicode code point(s)"/>

            <TextBox Grid.Row="4" Grid.Column="0"
                     HorizontalAlignment="Stretch"
                     Margin="3,3,12,3"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Text="{Binding MapValue}"
                     ToolTip="{Binding MapValueName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Grid.Row="4" Grid.Column="1"
                     HorizontalAlignment="Stretch"
                     Margin="3,3,12,3"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Text="{Binding MapValueCodePoint, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Grid.Row="4" Grid.Column="2"
                    Content="Clear"
                    Command="{Binding ClearFieldsCommand}"/>

            <Button Grid.Row="6" Grid.Column="1"
                    HorizontalAlignment="Right"
                    Content="Save"
                    IsDefault="True" 
                    Command="{Binding Path=SaveCommand}" />

            <Button Grid.Row="6" Grid.Column="2" 
                    Content="Cancel"
                    IsCancel="True" />

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0">
                <!-- hidden text to use as a dynamic spacer -->
                <TextBlock Text="Delete" Padding="9,0" Visibility="Hidden"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1">
                <TextBlock Text="Replace this character or characters" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2">
                <TextBlock Text="With this character or chararacters" />
            </Border>

            <DataGrid x:Name="dataGrid"
                      Grid.Row="1" Grid.ColumnSpan="3"
                      Margin="3"
                      ItemsSource="{Binding MapItems}"
                      AutoGenerateColumns="False" 
                      SelectionMode="Single" 
                      SelectionUnit="Cell"
                      CanUserResizeColumns="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Style="{StaticResource ThemedDataGrid}"
                      ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeader}"
                      CellStyle="{StaticResource ThemedDataGridCell}"
                      RowHeaderStyle="{StaticResource ThemedDataGridRowHeader}"
                      HorizontalGridLinesBrush="{DynamicResource DataGrid.GridLine}"
                      VerticalGridLinesBrush="{DynamicResource DataGrid.GridLine}"
                      PreviewKeyDown="DataGrid_PreviewKeyDown">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Delete" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="&#xE10A;" FontFamily="Segoe UI Symbol" 
                                        Foreground="Red"
                                        Width="24"
                                        MinWidth="24"
                                        Margin="0"
                                        Padding="0"
                                        Command="{Binding DeleteCommand}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Original" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MapKey}"
                                           ToolTipService.ToolTip="{Binding MapKeyName}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Unicode code point" IsReadOnly="True" Width="2*"
                                        Binding="{Binding MapKeyCodePoint}" />
                    <DataGridTemplateColumn Header="Substitute" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MapValue}"
                                           ToolTipService.ToolTip="{Binding MapValueName}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Unicode code point" IsReadOnly="True" Width="2*"
                                        Binding="{Binding MapValueCodePoint}" />
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource ThemedDataGridRow}">
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
    </DockPanel>
</my:ThemedWindow>
